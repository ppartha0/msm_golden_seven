<h1>Edit Director <%= @director.id %></h1>

<form action="/update_director/<%= @director.id %>">
  <div>
    <label for="image_input">
      Image url
    </label>

    <input id="image_input" type="text" name="the_image" value="<%= @director.image_url %>">
  </div>
  
  <div>
    <label for="name_input">
      Name
    </label>

    <textarea id="name_input" type="text" name="the_name"><%= @director.name %></textarea>
  </div>

  <div>
    <label for="bio_input">
      Bio
    </label>

    <textarea id="bio_input" type="text" name="the_bio"><%= @director.bio %></textarea>
  </div>

  <div>
    <label for="dob_input">
      Dob
    </label>

    <input id="dob_input" type="text" name="the_dob" value="<%= @director.dob %>">
  </div>
  

  <button>
    Update Director
  </button>
</form>