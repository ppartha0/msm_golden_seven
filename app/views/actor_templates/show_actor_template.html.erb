<h1>Actor Details</h1>

<p>
  <%= @act.name %>
</p>

<img src="<%= @act.image_url %>">
<p>Bio: <%= @act.bio %></p>
<p>Date of birth: <%= @act.dob %></p>
<p>Image url: <%= @act.image_url %></p>
<p>
  <%= time_ago_in_words(@act.created_at) %> ago
</p>

<a href="/actors" class="btn btn-default">
  Go back
</a>

<a href="/actors/<%= @act.id %>/edit" class="btn btn-default">
  Edit actor
</a>

<a href="/delete_actor/<%= @act.id %>" class="btn btn-default">
  Delete actor
</a>