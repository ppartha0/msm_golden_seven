<h1>Edit Actor <%= @actor.id %></h1>

<form action="/update_actor/<%= @actor.id %>">
  <div>
    <label for="image_input">
      Image url
    </label>

    <input id="image_input" type="text" name="the_image" value="<%= @actor.image_url %>">
  </div>
  
  <div>
    <label for="name_input">
      Name
    </label>

    <input id="name_input" type="text" name="the_name" value="<%= @actor.name %>">
  </div>

  <div>
    <label for="bio_input">
      Bio
    </label>

    <textarea id="bio_input" type="text" name="the_bio"><%= @actor.bio %></textarea>
  </div>

  <div>
    <label for="dob_input">
      Dob
    </label>

    <input id="dob_input" type="text" name="the_dob" value="<%= @actor.dob %>">
  </div>
  

  <button>
    Update actor
  </button>
</form>