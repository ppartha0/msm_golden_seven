<h1>All actors</h1>

<a href="/actors/new">
  Add a new actor
</a>

<% @list_of_actors.each do |the_act| %>
  <div class="thumbnail">
    <img src="<%= the_act.image_url %>">

    <div class="caption">
         <p><%= the_act.name %></p>
         <p>Bio: <%= the_act.bio %></p>
         <p>Date of Birth: <%= the_act.dob %></p>
         <p>Image URL: <%= the_act.image_url %></p>
         
         <a href="/actors/<%= the_act.id %>" class="btn btn-default btn-block">
          Show details
        </a>

        <a href="/actors/<%= the_act.id %>/edit" class="btn btn-default btn-block">
          Edit actor
        </a>

        <a href="/delete_actor/<%= the_act.id %>" class="btn btn-default btn-block">
          Delete actor
        </a>
    </div>
  </div>
<% end %>